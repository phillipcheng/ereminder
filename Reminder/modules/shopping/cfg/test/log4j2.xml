<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
    <File name="File" fileName="client.log">
      <PatternLayout>
        <pattern>%d %p %C{1.} [%t] %m%n</pattern>
      </PatternLayout>
    </File>
  </Appenders>
  
  <Loggers>
    <Root level="DEBUG">
      <AppenderRef ref="Console"/>
    </Root>
    
    <Logger name="org.cld" level="DEBUG" additivity="false">
      <AppenderRef ref="Console"/>
    </Logger>
    <Logger name="cy.common" level="DEBUG" additivity="false">
      <AppenderRef ref="Console"/>
    </Logger>
    <Logger name="cy.crbook" level="DEBUG" additivity="false">
      <AppenderRef ref="Console"/>
    </Logger>
    

    <Logger name="org.apache" level="WARN">
      <AppenderRef ref="File"/>
    </Logger>
    <Logger name="org.hibernate" level="WARN">
      <AppenderRef ref="File"/>
    </Logger>
    <Logger name="com.gargoylesoftware" level="FATAL">
      <AppenderRef ref="File"/>
    </Logger>
    <Logger name="net.sourceforge.htmlunit" level="FATAL">
      <AppenderRef ref="File"/>
    </Logger>
  </Loggers>
</Configuration>