			<csvtransform outputType="byId" transformClass="org.cld.etl.csv.CellTableAsCSV">
				<ops>
					<expression>function getQuarterEndDateFromMonth(qrt) {
    var q = new String(qrt)
    q = q.replace(/\(FYE\)/g, "")
    q = q.replace(/^\s+|\s+$/g, '')
    if (q=='January') return '01-31'
    if (q=='February') return '02-28'
    if (q=='March') return '03-31'
    if (q=='April') return '04-30'
    if (q=='May') return '05-31'
    if (q=='June') return '06-30'
    if (q=='July') return '07-31'
    if (q=='August') return '08-31'
    if (q=='September') return '09-30'
    if (q=='October') return '10-31'
    if (q=='November') return '11-30'
    if (q=='December') return '12-31'
    return q
}

function merge(arr){
    arr[1] = arr[0] + '-' + arr[1]
    arr = arr.slice(1,arr.length)
    return arr.join(',')
}

arr[1] = getQuarterEndDateFromMonth(arr[1])
merge(arr)</expression>
				</ops>
			</csvtransform>
			<filter>function getDate(q) {
    if (q=='1') return '-03-31'
    if (q=='2') return '-06-30'
    if (q=='3') return '-09-30'
    if (q=='4') return '-12-31'
}
(year==0 || quarter==0 || arr[0]&gt;=(year+getDate(quarter))) &amp;&amp; arr.length>3 &amp;&amp; arr[0].indexOf('Total')==-1</filter>
