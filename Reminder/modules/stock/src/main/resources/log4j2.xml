<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <Root level="ERROR">
      <AppenderRef ref="Console"/>
    </Root>
    
    <Logger name="org.cld" level="INFO" additivity="false">
      <AppenderRef ref="Console"/>
    </Logger>
    
    <Logger name="org.xml.mytaskdef" level="INFO" additivity="false">
      <AppenderRef ref="Console"/>
    </Logger>
    <Logger name="cy.common" level="WARN" additivity="false">
      <AppenderRef ref="Console"/>
    </Logger>
    <Logger name="cy.crbook" level="WARN" additivity="false">
      <AppenderRef ref="Console"/>
    </Logger>
    
    <Logger name="org.apache" level="WARN">
      <AppenderRef ref="Console"/>
    </Logger>
    <Logger name="org.hibernate" level="WARN">
      <AppenderRef ref="Console"/>
    </Logger>
    <Logger name="com.gargoylesoftware" level="FATAL">
      <AppenderRef ref="Console"/>
    </Logger>
    <Logger name="net.sourceforge.htmlunit" level="FATAL">
      <AppenderRef ref="Console"/>
    </Logger>
  </Loggers>
</Configuration>